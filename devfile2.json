{
  "apiVersion": "1.0.0",
  "metadata": {
    "generateName": "che-ansible-demo-"
  },
  "projects": [
    {
      "name": "edge",
      "source": {
        "location": "https://github.com/matmille/edge-workshop.git",
        "type": "git"
      }
    }
  ],
  "components": [
    {
      "alias": "ansible",
      "type": "dockerimage",
      "image": "quay.io/sunix/che-remote-plugin-ansible",
      "memoryLimit": "512M",
      "mountSources": true,
      "args": [
        "tail",
        "-f",
        "/dev/null"
      ],
      "env": [
        {
          "name": "ANSIBLE_CONFIG",
          "value": "/projects/edge/.conf/ansible.cfg"
        },
        {
          "name": "HOME",
          "value": "/projects/"
        }
      ]
    },
    {
      "alias": "ansible-plugin",
      "type": "chePlugin",
      "reference": "https://raw.githubusercontent.com/sunix/che-ansible/master/plugin/meta.yaml"
    }
  ],
  "commands": [
    {
      "name": "fileperm",
      "actions": [
        {
          "type": "exec",
          "component": "ansible",
          "command": "mkdir -m 0700 /projects/.ssh;cp /projects/.conf/edge /projects/.ssh/id_rsa;chmod 0600 /projects/.ssh/id_rsa",
          "workdir": "/"
        }
      ]
    }
  ],
  "events": {
    "preStart": [
      "fileperm"
    ]
  }
}
